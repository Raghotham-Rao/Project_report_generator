<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include('./partials/bootstrap_loader.ejs') %>
</head>
<body>
    <div class="container">
        <%- include('./partials/navbar.ejs') %>
        <div class="mt-3">
            <form method="POST" action="/report/create-report">
                <h3>Project Details</h3>
                <div class="form-group">
                    <label for="project-title">Project Title:</label>
                    <input type="text" name="project-title" id="project-title" class="form-control" placeholder="Enter project title...">
                </div>
                <div class="form-group">
                    <label for="branch">Select Branch:</label>
                    <select name="branch" id="branch" class="form-control">
                        <% for(branch_name of ['CSE', 'MECH', 'CIV', 'ISE', 'ECE', 'IT', 'IEM']) { %>
                            <option><%= branch_name %></option>
                        <% } %>
                    </select>
                </div>

                <h3>Group Members</h3>

                <div class="row">
                    <div class="col-sm">
                        <div class="form-group">
                            <label for="member-1">Project Member 1: </label>
                            <input type="text" name="member-1" id="memeber-1" class="form-control" placeholder="Enter Member's Full Name...">
                        </div>
                    </div>
                    <div class="col-sm">
                        <div class="form-group">
                            <label for="member-1-usn">USN: </label>
                            <input type="text" name="member-1-usn" id="memeber-1-usn" class="form-control" placeholder="Enter USN...">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm">
                        <div class="form-group">
                            <label for="member-2">Project Member 2: </label>
                            <input type="text" name="member-2" id="memeber-2" class="form-control" placeholder="Enter Member's Full Name...">
                        </div>
                    </div>
                    <div class="col-sm">
                        <div class="form-group">
                            <label for="member-2-usn">USN: </label>
                            <input type="text" name="member-2-usn" id="memeber-2-usn" class="form-control" placeholder="Enter USN...">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm">
                        <div class="form-group">
                            <label for="member-3">Project Member 3: </label>
                            <input type="text" name="member-3" id="memeber-3" class="form-control" placeholder="Enter Member's Full Name...">
                        </div>
                    </div>
                    <div class="col-sm">
                        <div class="form-group">
                            <label for="member-3-usn">USN: </label>
                            <input type="text" name="member-3-usn" id="memeber-3-usn" class="form-control" placeholder="Enter USN...">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm">
                        <div class="form-group">
                            <label for="member-4">Project Member 4: </label>
                            <input type="text" name="member-4" id="memeber-4" class="form-control" placeholder="Enter Member's Full Name...">
                        </div>
                    </div>
                    <div class="col-sm">
                        <div class="form-group">
                            <label for="member-4-usn">USN: </label>
                            <input type="text" name="member-4-usn" id="memeber-4-usn" class="form-control" placeholder="Enter USN...">
                        </div>
                    </div>
                </div>

                <h3>Guide Details</h3>

                <div class="form-group">
                    <label for="guide-name">Guide Name: </label>
                    <div class="row">
                        <div class="col-sm-2">
                            <select name="honorific" id="honorific" class="form-control">
                                <% for(honorific of ['Mr.', 'Ms.', 'Mrs.']) { %>
                                    <option><%= honorific %></option>
                                <% } %>
                            </select>
                        </div>

                        <div class="col-sm-10">
                            <input type="text" name="guide-name" id="guide-name" class="form-control" placeholder="Enter Guide Name...">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="designation">Designation:</label>
                    <select name="designation" id="designation" class="form-control">
                        <% for(designation of ['Assistant Professor', 'Professor', 'Associate Professor', 'Head']) { %>
                            <option><%= designation %></option>
                        <% } %>
                    </select>
                </div>

                <div class="form-group">
                    <label for="year">Year:</label>
                    <select name="year" id="year" class="form-control">
                        <% curr_year = new Date().getFullYear(); %>
                        <% for(i=curr_year; i >= curr_year - 4; i--) { %>
                            <option><%= i-1 %> - <%= i %></option>
                        <% } %>
                    </select>
                </div>

                <button class="btn btn-primary">Create Report</button>
                
            </form>
        </div>
    </div>
</body>
</html>